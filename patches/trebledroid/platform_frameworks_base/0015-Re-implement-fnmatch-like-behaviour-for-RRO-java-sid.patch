Subject: [PATCH 15/49] Re-implement fnmatch-like behaviour for RRO java-side

T: Also apply to FrameworkParsingPackageUtils (@PeterCxy)

Change-Id: Id38292a9a1453aa87b8401c1fdb390fa4e63c7d1
---
 core/java/android/content/pm/PackageParser.java     | 13 +++++++++++--
 .../pm/parsing/FrameworkParsingPackageUtils.java    |  7 +++++++
 2 files changed, 18 insertions(+), 2 deletions(-)

diff --git a/core/java/android/content/pm/PackageParser.java b/core/java/android/content/pm/PackageParser.java
index 223953a1c71c..d37ad6f90432 100644
--- a/core/java/android/content/pm/PackageParser.java
+++ b/core/java/android/content/pm/PackageParser.java
@@ -2545,8 +2545,17 @@ public class PackageParser {
         for (int i = 0; i < propNames.length; i++) {
             // Check property value: make sure it is both set and equal to expected value
             final String currValue = SystemProperties.get(propNames[i]);
-            if (!TextUtils.equals(currValue, propValues[i])) {
-                return false;
+            final String value = propValues[i];
+            if(value.startsWith("+")) {
+                final java.util.regex.Pattern regex = java.util.regex.Pattern.compile(value.substring(1, value.length()).replace("*", ".*"));
+                java.util.regex.Matcher matcher = regex.matcher(currValue);
+                if (!matcher.find()) {
+                    return false;
+                }
+            } else {
+                if(!value.equals(currValue)) {
+                    return false;
+                }
             }
         }
         return true;
diff --git a/core/java/android/content/pm/parsing/FrameworkParsingPackageUtils.java b/core/java/android/content/pm/parsing/FrameworkParsingPackageUtils.java
index b75ba82ad091..b0f8838ebdef 100644
--- a/core/java/android/content/pm/parsing/FrameworkParsingPackageUtils.java
+++ b/core/java/android/content/pm/parsing/FrameworkParsingPackageUtils.java
@@ -226,6 +226,13 @@ public class FrameworkParsingPackageUtils {
             if (!currValue.equals(propValues[i])) {
                 return false;
             }
+            if(propValues[i].startsWith("+")) {
+                final java.util.regex.Pattern regex = java.util.regex.Pattern.compile(propValues[i].substring(1, propValues[i].length()).replace("*", ".*"));
+                java.util.regex.Matcher matcher = regex.matcher(currValue);
+                if (!matcher.find()) {
+                    return false;
+                }
+            }
         }
         return true;
     }
